<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6e7fe"
    android:layout_margin="7dp"
    tools:context="com.example.sungin.minzzeunge.Main2Activity_login">


    <TextView
        android:padding="20dp"
        android:textColor="#cc1013"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인이 필요합니다" />

    <TextView
        android:id="@+id/textView8"
        android:padding="20dp"
        android:textColor="#349208"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="이름과 주민등록 번호를 입력하세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:id="@+id/textView5"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:textColor="#406acc"
            android:padding="15dp"
            android:textSize="15dp"
            android:textStyle="bold"

            android:text="이름" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#406acc"
            android:padding="15dp"
            android:textSize="15dp"
            android:textStyle="bold"

            android:text="주민등록번호" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="-" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />


    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogiN" />
</LinearLayout>
